<h1>Create a new review for <%= @restaurant.name %></h1>

<!-- Create a form that is connected to both the object of restaurant and review-->
<!-- These are initialized inside the new action in reviews controller -->
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, collection: Review::RATING, prompt: :translate %>
  <%= f.submit %>
<% end %>

